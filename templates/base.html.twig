<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Maquette Village Green{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
          crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% block stylesheets %}{% endblock %}
</head>

<body>
<nav class="container-fluid">
    <a href="{{ path('home') }}"></a>
    <div class="row">

        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <section class="logo">
                <img class="img-fluid1"
                     src="{{ asset('image/3_bandes.png') }}" alt="imageBandes">
                <a href="{{ path('home') }}"> <img class="img-fluid2"
                      src="{{ asset('image/logo_village_green.png') }}"
                        alt="logo Villagegreen"></a>
            </section>
            <div>
                <ul class="navbar-nav justify-content-end p-0 m-0">
                    {% if not app.user %}
                        <li class="nav-item">
                            <a class="Connexion" href="{{ path('securite_login') }}">Connexion</a>
                        </li>
                        {% else %}
                        <li class="nav-item">
                            <a class="Connexion" href="{{ path('securite_logout') }}">Déconnexion</a>
                        </li>
                    {% endif %}

                    {% if is_granted ('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="GestionUtilisateurs" href="{{ path('admin_utilisateurs') }}">Gestion Utilisateurs</a>
                        </li>
                    {% endif %}

                    <li class="nav-item">
                        <a class="Info" href="#" >Infos</a>
                    </li>
                    <li class="nav-item">
                        <div>
                            <a class="EspaceClient dropdown-toggle" data-toggle="dropdown"
                               href="#" role="button" aria-haspopup="false" aria-expanded="false" >Espace client</a>

                            <div class="dropdown-menu" _msthidden="2">
                                <div style="width: 100px; float:left; height:100px; margin:20px">
                                    <a class="btn" href="{{ path('securite_login')}}"
                                       _msthidden="1">Se connecter maintenant</a>
                                </div>
                                <div style="width: 100px; float:left; height:100px; margin:20px">
                                    <a class="btn" href="{{ path('securiteInscription') }}"
                                       _msthidden="1" >S'inscrire</a>
                                </div>

                            </div>
                        </div>
                    </li>
                    <li class="nav-item active">
                        <a href="{{ path('panier') }}"> <img class="Panier"
                                                             src="{{ asset('image/picto_panier.png') }}"
                                                           alt="panier"></a>
                        </li>
                    <li class="nav-item">
                        <img src="{{asset('image/picto_pays.png') }}"
                             a class="Pays" href="#"></li>
                </ul>
            </div>

            <section>
                <ul class="navbar-nav">

                    <li class="nav-item">
                        <a class="Produits" href="{{ path('produits_index') }}" >Produits</a>
                    </li>
                    <li class="nav-item">
                        <a class="Service" href="#" >Service</a>
                    </li>
                    <li class="nav-item">
                        <a class="Aide" href="#" >Aide</a>
                    </li>
                    <li class="nav-item">
                        <a class="A_propos" href="#" >A propos</a>
                    </li>
                </ul>
            </section>

            <section>
                <ul class="navbar-nav">

                    <li class="nav-item">
                        <a class="Guitares dropdown-toggle"class="nav-link dropdown-toggle" data-toggle="dropdown"
                           href="#" role="button" aria-haspopup="true" aria-expanded="false" _msthash="575250"
                           _msttexthash="171808">Guit/Bass</a>

                        <div class="dropdown-menu" _msthidden="8">
                            <a class="dropdown-item" href="{{ path('musica2') }}"
                               _msthidden="1">Guitares électriques</a>
                            <a class="dropdown-item" href="#"
                               _msthidden="1">Guitares classiques</a>
                            <a class="dropdown-item" href="#"
                               _msthidden="1">Guitares Acoustiques & Electro-Acoustiques</a>
                            <a class="dropdown-item" href="#"
                               _msthidden="1">Basses Electriques</a>
                            <a class="dropdown-item" href="#"
                               _msthidden="1">Basses Acoustiques</a>
                            <a class="dropdown-item" href="#"
                               _msthidden="1">Basses Semi-Acoustiques</a>
                            <a class="dropdown-item" href="#"
                               _msthidden="1">Ukulélés</a>
                            <a class="dropdown-item" href="#"
                               _msthidden="1">Autres instruments à cordes pincées</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="Batteries" href="#" >Batteries</a>
                    </li>
                    <li class="nav-item">
                        <a class="Clavier" href="#" >Clavier</a>
                    </li>
                    <li class="nav-item">
                        <a class="Studio" href="#" >Studio</a>
                    </li>
                    <li class="nav-item">
                        <a class="Sono" href="#">Sono </a>
                    </li>
                    <li class="nav-item">
                        <a class="Eclairage" href="#" >Eclairage</a>
                    </li>
                    <li class="nav-item">
                        <a class="DJ" href="#" >DJ</a>
                    </li>
                    <li class="nav-item">
                        <a class="Cases" href="#" >Cases</a>
                    </li>
                    <li class="nav-item">
                        <a class="Accessoires" href="#" >Accessoires</a>
                    </li>
                </ul>
            </section>
        </div>
    </div>
</nav>

<div class="container-fluid">
    {% block body %} {% endblock %}
</div>
{% block javascripts %}{% endblock %}


<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
        crossorigin="anonymous">
</script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous">
</script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous">
</script>


</body>

</html>
