{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <div class="container-fluid4">

        <h1>Liste des utilisateurs</h1>
            <table class="table">
                <thead>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Rôles</th>
                    <th>Actions</th>
                </thead>
             <tbody>
        {% for user in users %}
        <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.email }}</td>
            <td>
                {% for role in user.roles %}
                    {% if role == "ROLE_USER"  %}Utilisateur
                    {% elseif role == "ROLE_GESTION" %}Gestion
                    {% elseif role == "ROLE_ADMIN" %}Administrateur
                    {% endif %}
                {% endfor %}
            </td>
            <td><a href="{{ path('admin_modifUser',  {'id': user.id}) }}" class="btn1">Modifier rôle</a> </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="4">Il n'y a pas d'utilisateurs inscrits</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

{% endblock %}